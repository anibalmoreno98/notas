<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mdi.notas.controller.NotaFxController"
            style="-fx-background-color: #1e1e1c;">

    <!-- PANEL SUPERIOR -->
    <top>
        <HBox spacing="10" style="-fx-padding: 20; -fx-background-color: #2a2a27;">
            <Label fx:id="lblTitulo"
                   text="Carpetas"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #d4af37;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnAdd"
                    text="+"
                    onAction="#accionBotonSuperior"
                    style="-fx-font-size: 26px;
                           -fx-font-weight: bold;
                           -fx-text-fill: #d4af37;
                           -fx-background-color: transparent;
                           -fx-border-color: #d4af37;
                           -fx-border-width: 2;
                           -fx-background-radius: 5;
                           -fx-border-radius: 5;"/>
        </HBox>
    </top>

    <!-- PANEL CENTRAL DINÃMICO -->
    <center>
        <StackPane fx:id="panelCentral" style="-fx-padding: 10;">

            <!-- Vista 1: Lista de carpetas -->
            <ListView fx:id="listaCarpetas"
                      style="-fx-font-size: 20px;
                             -fx-control-inner-background: #1e1e1c;
                             -fx-text-fill: white;
                             -fx-background-insets: 0;
                             -fx-padding: 10;"/>

            <!-- Vista 2: Lista de notas dentro de una carpeta -->
            <VBox fx:id="vistaNotas" visible="false" managed="false" spacing="10">
                <ListView fx:id="listaNotas"
                          style="-fx-font-size: 18px;
                                 -fx-control-inner-background: #1e1e1c;
                                 -fx-text-fill: white;
                                 -fx-background-insets: 0;
                                 -fx-padding: 10;"/>
            </VBox>

        </StackPane>
    </center>

    <!-- BARRA DE ESTADO -->
    <bottom>
        <HBox style="-fx-padding: 5; -fx-background-color: #2a2a27;">
            <Label fx:id="lblEstado"
                   text="Listo"
                   style="-fx-text-fill: #d4af37;"/>
        </HBox>
    </bottom>

</BorderPane>
