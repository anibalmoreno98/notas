<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mdi.notas.controller.CarpetaFxController"
            style="-fx-background-color: #1e1e1c;">

    <!-- HEADER -->
    <top>
        <HBox spacing="10" style="-fx-padding: 20 20 20 20; -fx-background-color: #2a2a27;">
            <Label fx:id="lblTitulo"
                   text="Carpetas"
                   style="-fx-padding: 40 0 0 0;-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #d4af37;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnBack"
                    text="←"
                    visible="false"
                    managed="false"
                    onAction="#volverAtras"
                    style="-fx-font-size: 26px;
                           -fx-font-weight: bold;
                           -fx-text-fill: #d4af37;
                           -fx-background-color: transparent;
                           -fx-border-color: #d4af37;
                           -fx-border-width: 2;
                           -fx-background-radius: 5;
                           -fx-border-radius: 5;"/>

            <Button fx:id="btnAdd"
                    text="+"
                    style="-fx-font-size: 26px;
                           -fx-font-weight: bold;
                           -fx-text-fill: #d4af37;
                           -fx-background-color: transparent;
                           -fx-border-color: #d4af37;
                           -fx-border-width: 2;
                           -fx-background-radius: 5;
                           -fx-border-radius: 5;"/>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="panelCentral" style="-fx-padding: 10;">

            <!-- Vista 1: Carpetas -->
            <ListView fx:id="listaCarpetas"
                      style="-fx-font-size: 20px;
                             -fx-control-inner-background: #1e1e1c;
                             -fx-text-fill: white;
                             -fx-background-insets: 0;
                             -fx-padding: 10;"/>

            <!-- Vista 2: Notas dentro de una carpeta -->
            <VBox fx:id="vistaNotas" visible="false" managed="false" spacing="10">
                <ListView fx:id="listaNotas"
                          style="-fx-font-size: 18px;
                                 -fx-control-inner-background: #1e1e1c;
                                 -fx-text-fill: white;
                                 -fx-background-insets: 0;
                                 -fx-padding: 10;"/>
            </VBox>

            <!-- Vista 3: Nueva nota -->
            <VBox fx:id="vistaNuevaNota" visible="false" managed="false" spacing="10"
                  style="-fx-padding: 20;">

                <TextField fx:id="txtTituloNuevaNota"
                           promptText="Título"
                           style="-fx-font-size: 18px;"/>

                <TextArea fx:id="txtContenidoNuevaNota"
                          promptText="Contenido"
                          style="-fx-font-size: 16px;"/>

                <HBox spacing="10">
                    <Button text="Guardar" onAction="#guardarNotaDesdeVista"
                            style="-fx-font-size: 18px; -fx-text-fill: #d4af37;"/>
                    <Button text="Cancelar" onAction="#cancelarNuevaNota"
                            style="-fx-font-size: 18px; -fx-text-fill: #d4af37;"/>
                </HBox>
            </VBox>

            <!-- Vista 4: Nueva carpeta -->
            <VBox fx:id="vistaNuevaCarpeta" visible="false" managed="false" spacing="10"
                  style="-fx-padding: 20;">

                <TextField fx:id="txtNombreNuevaCarpeta"
                           promptText="Nombre de la carpeta"
                           style="-fx-font-size: 18px;"/>

                <HBox spacing="10">
                    <Button text="Guardar" onAction="#guardarCarpetaDesdeVista"
                            style="-fx-font-size: 18px; -fx-text-fill: #d4af37;"/>
                    <Button text="Cancelar" onAction="#cancelarNuevaCarpeta"
                            style="-fx-font-size: 18px; -fx-text-fill: #d4af37;"/>
                </HBox>
            </VBox>

            <!-- Vista 5: Ver nota -->
            <VBox fx:id="vistaVerNota" visible="false" managed="false" spacing="10"
                  style="-fx-padding: 20;">

                <Label fx:id="lblTituloNota"
                       style="-fx-font-size: 26px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #d4af37;"/>

                <TextArea fx:id="txtContenidoNota"
                          wrapText="true"
                          editable="true"
                          style="-fx-font-size: 16px;
                                 -fx-control-inner-background: #ffffff;
                                 -fx-text-fill: black;
                                 -fx-background-insets: 0;
                                 -fx-padding: 10;"/>

                <!-- Botón eliminar -->
                <Button fx:id="btnEliminar"
                        text="Eliminar"
                        onAction="#eliminarNotaActual"
                        style="-fx-font-size: 18px;
                               -fx-text-fill: #ff5555;
                               -fx-background-color: transparent;
                               -fx-border-color: #ff5555;
                               -fx-border-width: 2;
                               -fx-background-radius: 5;
                               -fx-border-radius: 5;"/>

                <Button text="Eliminar definitivamente"
                            fx:id="btnEliminarDefinitivo"
                            onAction="#eliminarDefinitivamente"
                            visible="false"
                            managed="false"
                            style="-fx-font-size: 18px;
                                -fx-text-fill: #ff5555;
                                -fx-background-color: transparent;
                                -fx-border-color: #ff5555;
                                -fx-border-width: 2;
                                -fx-background-radius: 5;
                                -fx-border-radius: 5;"/>

                <!-- Botones favoritos -->
                <HBox spacing="10">
                    <Button fx:id="btnFavorito"
                            text="★ Añadir a favoritos"
                            onAction="#marcarFavorito"
                            style="-fx-font-size: 18px;
                                   -fx-text-fill: #d4af37;
                                   -fx-background-color: transparent;
                                   -fx-border-color: #d4af37;
                                   -fx-border-width: 2;
                                   -fx-background-radius: 5;
                                   -fx-border-radius: 5;"/>

                    <Button fx:id="btnQuitarFavorito"
                            text="✖ Quitar de favoritos"
                            visible="false"
                            managed="false"
                            onAction="#desmarcarFavorito"
                            style="-fx-font-size: 18px;
                                   -fx-text-fill: #ff5555;
                                   -fx-background-color: transparent;
                                   -fx-border-color: #ff5555;
                                   -fx-border-width: 2;
                                   -fx-background-radius: 5;
                                   -fx-border-radius: 5;"/>
                </HBox>

            </VBox>

        </StackPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox style="-fx-padding: 5; -fx-background-color: #2a2a27;">
            <Label fx:id="lblEstado"
                   text="Listo"
                   style="-fx-text-fill: #d4af37;"/>
        </HBox>
    </bottom>

</BorderPane>
